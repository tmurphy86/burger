<div class="row">
  <div class="col-sm-4">
  	<h3>Eat the burger!</h3>
	{{#each data}}
		{{#unless this.devoured}}

			<form method="POST" action="/{{this.id}}?_method=PUT" class="button-size">
			<input type="hidden" name={{this.burger_name}} type="text" value={{this.id}}>
			<button type="submit">{{this.id}}. {{this.burger_name}}</button>
			</form>
			<br>
		{{/unless}}
	{{/each}}
  </div>

  <div class="col-sm-4">
  	<h3>Add a burger</h3>
		<form class="create-update-form" action="/" method="POST">
	  		<div class="form-group">
		    	<input type="text" id="burger" name="name">
		    	<label for="burger"><button type="submit">Add Burger</button></label>
	  		</div>
		</form>
  </div>


  <div class="col-sm-4">
  	<h3>Burger that got got!</h3>
  		{{#each data}}
   		 	{{#if this.devoured}}
		      <form action="/{{this.id}}?_method=PUT" method="POST">
		          <input type="hidden" name="{{this.burger_name}}" value="{{this.id}}">
		          <button type="submit">{{this.id}}. {{this.burger_name}}</button>
		      </form>
		      <br>
    		{{/if}}
  		{{/each}}
  </div>


</div>










